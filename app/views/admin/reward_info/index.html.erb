<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <%= render partial: "shared/admin_bread_crumb", locals: {page: "Rewards", title: "Rewards"} %>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <div class="row">
                  <div class="col-8">
                    <h3 class="card-title">Rewards</h3>
                  </div>
                  <div class="col-4">
                    <%= link_to "Add Reward", new_admin_reward_info_path, class: "btn btn-primary float-right" %>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example2" class="table table-bordered table-hover">
                  <thead>
                  <tr>
                    <th>Id</th>
                    <th>Amount</th>
                    <th>Edit</th>
                    <th>Delete</th>
                  </tr>
                  </thead>
                  <tbody>
                        <% @rewards_info.try(:each) do |reward_info| %>
                            <tr>
                                <td><%= reward_info.id %></td>
                                <td><%= reward_info.amount %></td>
                                <td><%= link_to "Edit", edit_admin_reward_info_path(reward_info)%></td>
                                <td><%= link_to "Delete", admin_reward_info_path(reward_info), method: :delete %></td>
                            </tr>
                        <% end %>
                  </tbody>
                  <tfoot>
                  <tr>
                    <th>Id</th>
                    <th>Amount</th>
                    <th>Edit</th>
                    <th>Delete</th>
                  </tr>
                  </tfoot>
                </table>
                <div class="row">
                    <div class="col-10"></div>
                    <div class="col-2"><%== pagy_bootstrap_nav(@pagy) %></div>
                </div>

              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
