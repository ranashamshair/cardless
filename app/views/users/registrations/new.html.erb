<!-- Start Page Banner -->
<div class="page-banner-area item-bg3">
  <div class="container">
      <div class="page-banner-content">
          <h2>Open account</h2>
          <ul>
              <li>
                  <a href="/" data-turbolinks="false">Home</a>
              </li>
              <li>Open account</li>
          </ul>
      </div>
  </div>
</div>
<!-- End Page Banner -->

<!-- Start Open Account Banner -->
<section class="open-account-area ptb-100">
  <div class="container">
      <div class="section-title">
          <h2>Account opening form</h2>
          <p>Quis ipsum suspendisse ultrices gravida. Risus commodo viverra maecenas accumsan lacus vel facilisis. Lorem ipsum dolor sit amet consectetur adipiscing elit</p>
      </div>

      <div class="open-account-form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <%= f.hidden_field :role, value: "merchant"%>
              <div class="row">
                  <div class="col-lg-6 col-md-6">
                      <div class="form-group">
                          <label>First name</label>
                          <%= f.text_field :first_name, class: "form-control", placeholder: "First Name" %>
    
                      </div>
                  </div>

                  <div class="col-lg-6 col-md-6">
                    <div class="form-group">
                      <label>Last name</label>
                      <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
                    </div>
                  </div>

                  <div class="col-lg-6 col-md-6">
                      <div class="form-group">
                          <label>Phone number</label>
                          <%= f.text_field :phone_number, class: "form-control", placeholder: "Phone Number" %>
                      </div>
                  </div>

                  <div class="col-lg-6 col-md-6">
                      <div class="form-group">
                          <label>Email</label>
                          <%= f.email_field :email, class: "form-control", autocomplete: "email", placeholder: "Email" %>
                      </div>
                  </div>

                  <div class="col-lg-6 col-md-6">
                    <div class="form-group">
                      <%= f.label :password %>
                      <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %>
                      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                    </div>
                  </div>
                
                  <div class="col-lg-6 col-md-6">
                    <div class="form-group">
                      <%= f.label :password_confirmation %>
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                    </div>
                  </div>
                  
                  <div class="col-lg-12">
                      <h3>Address</h3>
                      
                      <div class="row">
                          <div class="col-lg-12">
                              <div class="form-group">
                                  <%= f.text_field :street_address, class: "form-control", placeholder: "Street Address" %>
                              </div>
                          </div>

                          <div class="col-lg-6">
                              <div class="form-group">
                                <%= f.text_field :city, class: "form-control", placeholder: "City" %>
                              </div>
                          </div>
                          
                          <div class="col-lg-6">
                              <div class="form-group">
                                <%= f.text_field :state, class: "form-control", placeholder: "State/Province" %>
                                  
                              </div>
                          </div>

                          <div class="col-lg-6">
                              <div class="form-group">
                                <%= f.text_field :zip_code, class: "form-control", placeholder: "Postal/Zip Code" %>
                                  
                              </div>
                          </div>

                          <div class="col-lg-6">
                              <div class="form-group">
                                <%= f.text_field :country, class: "form-control", placeholder: "Country" %>
                              </div>
                          </div>
                      </div>
                  </div>

                  <div class="col-lg-12">
                      <div class="banner-form-btn">
                          <%= f.submit "Open Account", class: "default-btn" %>
                      </div>
                  </div>
              </div>
        <% end %>
      </div>
  </div>
</section>
<!-- End Open Account Banner -->
