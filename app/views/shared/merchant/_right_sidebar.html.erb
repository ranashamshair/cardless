      <div class="user_profile shadow-sm"><i class="far fa-user-circle"></i></div>
      <div class="right_side_ttilte">DistroPayment</div>
      <div class="right_side_id"><%= t('merchant.account_id')%>:<%= current_user.id %></div>
      <div class="wrap d-flex align-items-center active">
