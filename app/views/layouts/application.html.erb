<!DOCTYPE html>
<html>
  <head>
    <title>DistroPayment</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Martel+Sans:wght@600&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@latest/dist/css/splide.min.css">
  </head>

  <body>
    <!-- Start Preloader Area -->
    <!-- <div class="preloader">
      <div class="loader">
          <div class="shadow"></div>
          <div class="box"></div>
      </div>
    </div> -->
    <!-- End Preloader Area -->
    <% if controller.action_name  != "docs"%>
      <%= render partial: "shared/header" %>
    <% end %>
    <%= yield %>
    <% if controller.action_name  != "docs"%>
      <%= render partial: "shared/footer" %>
    <% end %>
    <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@latest/dist/js/splide.min.js"></script>
    <script>
      new Splide( '#splide', {
        direction: 'ttb',
        height   : '10rem',
        type    : 'loop',
        perPage : 1,
        autoplay: true,
        interval: 3000,
        pagination: false
      } ).mount();

      new Splide( '#splideTwo', {
        direction: 'ttb',
        height   : '10rem',
        type    : 'loop',
        perPage : 1,
        autoplay: true,
        interval: 2800,
        pagination: false
      } ).mount();

      new Splide( '#splideThree', {
        direction: 'ttb',
        height   : '10rem',
        type    : 'loop',
        perPage : 1,
        autoplay: true,
        interval: 2700,
        pagination: false
      } ).mount();

      new Splide( '#splideFour', {
        direction: 'ttb',
        height   : '10rem',
        type    : 'loop',
        perPage : 1,
        autoplay: true,
        interval: 2600,
        pagination: false
      } ).mount();

      new Splide( '#splideFive', {
        direction: 'ttb',
        height   : '10rem',
        type    : 'loop',
        perPage : 1,
        autoplay: true,
        interval: 2500,
        pagination: false
      } ).mount();

      new Splide( '#splideSix', {
        direction: 'ttb',
        height   : '10rem',
        type    : 'loop',
        perPage : 1,
        autoplay: true,
        interval: 2400,
        pagination: false
      } ).mount();
    </script>
  </body>
</html>
