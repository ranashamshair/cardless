

<div class="dashboard_main_page">
  <div class="container-fluid">
      <div class="row">
          <div class="col-md-6">
              <nav aria-label="breadcrumb bg-info">
                  <ol class="breadcrumb">
                      <li class="breadcrumb-item"><a href="#"><%= t('transactions.accounts')%></a></li>
                      <li class="breadcrumb-item active" aria-current="page"><%= t('transactions.withdraws')%></li>
                  </ol>
              </nav>
          </div>
  
          <div class="col-md-6">
  
          </div>
      </div>
  
      <div class="row">
          <div class="col-md-12">
              <div class="transaction_history_table">
                  <table class="table table-striped shadow">
                      <thead>
                          <tr>
                              <th scope="col"><%= t('banks.withdraw_id')%></th>
                              <th scope="col"><%= t('banks.withdraw_amount')%></th>
                              <th scope="col"><%= t('banks.payed')%></th>
                              <th scope="col"><%= t('banks.created_at')%></th>
                              <th scope="col"><%= t('banks.payed_at')%></th>
                          </tr>
                      </thead>
                      <tbody>
                          <% @withdraws&.each do |withdraw|%>
                              <tr>
                                  <th scope="row"><%= withdraw.ref_id %></th>
                                  <td><%= number_with_precision(number_to_currency(withdraw.amount.to_f), precision: 2, delimiter: ',') %></td>
                                  <td><button class="tabel_status"><a href="#"><%= payed(withdraw.is_payed) %></a></button></td>
                                  <td><%= withdraw.created_at.strftime("%m/%d/%Y %H:%M %p") %></td>
                                  <td><%= withdraw.payed_at&.strftime("%d/%m/%Y %H:%M %p") %></td>
                              </tr>
                          <% end %>
                      </tbody>
                  </table>
              </div>
          </div>
  
      </div>
  
      <!-- Pagination Start -->
      <%== pagy_bootstrap_nav(@pagy) %>
  
  </div>
  </div>