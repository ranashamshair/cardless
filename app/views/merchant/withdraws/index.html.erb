<div class="dashboard_main_page">
  <div class="container-fluid">
   <div class="row text-center">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="welcom_heading">
          Withdraws </div>
        <div class="small_head pl-1">Your Accounts Dashboard</div>
      </div>
    </div>

      <div class="row">
          <div class="col-md-12">
            <!-- <a href="#" class="withdraw-btn">Withdraw</a> -->
              <div class="transaction_history_table witdr-table">
                  <table class="table table-striped shadow">
                      <thead>
                          <tr class="bg-tr">
                              <th scope="col">Id</th>
                              <th scope="col">Amount</th>
                              <th scope="col">Payed</th>
                              <th scope="col">Created at</th>
                              <th scope="col">Payed at</th>
                          </tr>
                      </thead>
                      <tbody>
                          <% @withdraws&.each do |withdraw|%>
                              <tr>
                                  <th scope="row"><%= withdraw.ref_id %></th>
                                  <td><%= number_with_precision(number_to_currency(withdraw.amount.to_f), precision: 2, delimiter: ',') %></td>
                                  <td><button class="tabel_status"><a href="#"><%= payed(withdraw.is_payed) %></a></button></td>
                                  <td><%= withdraw.created_at.strftime("%m/%d/%Y %H:%M %p") %></td>
                                  <td><%= withdraw.payed_at&.strftime("%d/%m/%Y %H:%M %p") %></td>
                              </tr>
                          <% end %>
                      </tbody>
                  </table>
              </div>
          </div>

      </div>

      <!-- Pagination Start -->
      <%== pagy_bootstrap_nav(@pagy) %>

  </div>
  </div>
