    <div id="dash_header">
      <div class="container-fluid">
        <div class="row align-items-center">
          <div class="dash_header_left ml-5">
            <div class="welcom_heading">
              Welcome, </div>
            <div class="small_head pl-2">Your Accounts Dashboard</div>
          </div>
          <div class="dash_header_right ml-auto">
            <div class="toggle"></div>
            <ul>
              <li><a href="#">
                  <div class="notify_icon shadow-sm"><i class="fas fa-bell"></i></div>
                  
                </a></li>
              <li><a href="#">
                  <div class="user_icon shadow-sm"><i class="far fa-user-circle"></i></div>
                </a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!-- dashboard header End -->
<!-- Dashboard Main Start -->
<div class="dashboard_main_page">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">

        </div>
      </div>

      <div class="row">
          <% current_user.wallets.each do |wallet|%>
            <div class="col-md-3 col-sm-12 col-xs-12">
                <div class="dashboard_main_box shadow text-center">
                    <div class="title"><%=  wallet.wallet_type %></div>
                    <div class="line"></div>
                    <div class="balance_one">
                    <div class="bal_title">Total Balance</div>
                    <div class="balance"><%= number_with_precision(number_to_currency(wallet.balance), precision: 2, delimiter: ',') %></div>
                    </div>
                    
                    <div class="line"></div>
                    <button class="dash_view_more"><a href="#">View More</a></button>

                </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
  <!-- Dashboard Main Start -->