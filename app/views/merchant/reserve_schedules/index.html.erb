<div class="dashboard_main_page">
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <nav aria-label="breadcrumb bg-info">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Accounts</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Reserve Schedules</li>
                </ol>
            </nav>
        </div>

        <div class="col-md-6">

        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="transaction_history_table">
                <table class="table table-striped shadow">
                    <thead>
                        <tr>
                            <th scope="col">Transaction Id</th>
                            <th scope="col">Release Date</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @reserve_schedules&.each do |reserve_schedules|%>
                            <tr>
                                <th scope="row"><%= reserve_schedules.main_tx&.ref_id %></th>
                                <td><%= reserve_schedules.release_date.strftime("%m/%d/%Y") %></td>
                                
                                <td><%= number_with_precision(number_to_currency(reserve_schedules.amount.to_f), precision: 2, delimiter: ',') %></td>
                                
                                <td><button class="tabel_status"><a href="#"><%= reserve_schedules.reserve_status %></a></button></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>

    </div>

