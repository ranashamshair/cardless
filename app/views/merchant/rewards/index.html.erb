

<div class="dashboard_main_page">
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <nav aria-label="breadcrumb bg-info">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Accounts</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Rewards</li>
                </ol>
            </nav>
        </div>

        <div class="col-md-6">

        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="transaction_history_table">
                <table class="table table-striped shadow">
                    <thead>
                        <tr>
                            <th scope="col">Reward Id</th>
                            <th scope="col">Payed</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Get Reward</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @rewards&.each do |reward|%>
                            <tr>
                                <th scope="row"><%= reward.id %></th>
                                <td><button class="tabel_status"><a href="#"><%= reward.payed ? "Paid" : "No" %></a></button></td>
                                <td><%= number_with_precision(number_to_currency(reward.amount.to_f), precision: 2, delimiter: ',') %></td>
                                <% if reward.payed %>
                                  <td><button class="tabel_status"><a href="#"><%= reward.payed ? "Paid" : "No" %></a></button></td>
                                <% else %>
                                  <td><%= link_to "Get Reward", get_reward_merchant_reward_path(reward) %></td>
                                <% end %>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>

    </div>

