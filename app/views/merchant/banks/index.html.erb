
<div class="dashboard_main_page">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="transaction_history_table">
          <p id="notice"><%= notice %></p>
          <h1><%= t('banks.banks')%></h1>
          <table class="table table-striped shadow">
            <%= link_to t('banks.new_bank'), new_merchant_bank_path, class:"btn btn-outline-primary float-right mr-2" %>

            <thead>
              <tr>
                <th scope="col"><%= t('banks.bank_name')%></th>
                <th scope="col"><%= t('banks.user_name')%></th>
                <th scope="col"><%= t('banks.iban')%></th>
                <th scope="col"><%= t('banks.currency')%></th>
                <th  scope="col"></th>
              </tr>
            </thead>

            <tbody>
              <% @banks.each do |bank| %>
                <tr data-href="<%= merchant_bank_path(id: bank.id) %>" >
                  <td><%= bank.bank_name %></td>
                  <td><%= bank.user_name %></td>
                  <td><%= bank.iban %></td>
                  <td><%= bank.currency %></td>
                  <td></td>
                </tr>
              <% end %>

            </tbody>
          </table>

          <br>

        </div>
      </div>
    </div>
  </div>
</div>
