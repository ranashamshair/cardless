<div class="dashboard_main_page">
    <div class="container-fluid">
        <div class="row text-center mb-5">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="welcom_heading">
                    Welcome, abdul qayyum </div>
                <div class="small_head pl-1">Your Accounts Dashboard</div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 mt-5">
                <!-- <a href="#" class="account-btn">Account Transfer</a> -->
                <%= link_to 'Account Transfer', new_merchant_account_transfer_path, class: "withdraw-btn",remote: true %>
                <div class="transaction_history_table">
                    <table class="table table-striped shadow">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Sender Name</th>
                                <th scope="col">Receiver Name</th>
                                <th scope="col">Amount</th>
                                <th scope="col">Fee</th>
                                <th scope="col">Payment Type</th>
                                <th scope="col">Instruction</th>
                                <th scope="col">Created At</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @account_transfers&.each do |account_transfer| %>
                            <tr>
                                <td><%= account_transfer.ref_id %></td>
                                <td><%= account_transfer.sender.first_name %></td>
                                <td><%= account_transfer.receiver&.first_name %></td>
                                <td><%= number_with_precision(number_to_currency(account_transfer.amount.to_f), precision: 2, delimiter: ',') %>
                                </td>
                                <td><%= number_with_precision(number_to_currency(account_transfer.fee.to_f), precision: 2, delimiter: ',') %>
                                </td>
                                <td><%= account_transfer.reason %></td>
                                <td><%= account_transfer.instruction %></td>
                                <td><%= account_transfer.created_at.strftime("%m/%d/%Y %H:%M %p") %></td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

        <!-- Pagination Start -->
        <%== pagy_bootstrap_nav(@pagy) %>
