                    <!-- Ledger Information Start -->

                </div><!-- Transaction Detail Box End -->
            </div><!-- Column End -->


            <!-- Customer Information Start-->
            <div class="col-md-5">
                <div class="transaction_detail_box shadow">
                    <div class="head text-center mt-2 mb-2">Customer Information</div>

                    <div class="row mt-3 mb-3">
                        <div class="col-lg-6">
                            <div class="trans_card_head font-weight-bold">Customer Name</div>
                            <div class="trans_card_data"><%= @sender.first_name %></div>
                        </div>
                        <div class="col-lg-6">
                            <div class="trans_card_head font-weight-bold">Phone Number</div>
                            <div class="trans_card_data"><%= @sender.phone_number %></div>
                        </div>

                    </div>

                    <div class="row mt-3 mb-3">
                        <div class="col-lg-6">
                            <div class="trans_card_head font-weight-bold">Email</div>
                            <div class="trans_card_data"><%= @sender.email %></div>
                        </div>
                        <div class="col-lg-6">
                            <div class="trans_card_head font-weight-bold">Wallet ID</div>
                            <div class="trans_card_data"><%= @sender.wallets.primary.first.id %></div>
                        </div>
                    </div>
                </div>

                <!-- Button trigger modal -->
                <a href="#" class="btn btn-primary btn-refund-modal mt-3" data-toggle="modal" data-target="#exampleModal">Refund</a>

                   <!-- Refund Modal Start -->
                   <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                   aria-labelledby="exampleModalLabel" aria-hidden="true">
                   <div class="modal-dialog refund_modal_dialog mx-auto" role="document">
                       <div class="modal-content refund_modal_body">
                           <div class="modal-header">
                               <h5 class="modal-title" id="exampleModalLabel">Refund Transaction </h5>
                               <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                   <span aria-hidden="true">&times;</span>
                               </button>
                           </div>
                           <div class="modal-body">

                            <form>
                                <div class="form-row">
                                  <div class="form-group col-md-6">
                                    <label for="inputEmail4">Enter Amount</label>
                                    <input type="email" class="form-control" id="inputEmail4" placeholder="Email">
                                  </div>
                                  <div class="form-group col-md-6">
                                    <label for="inputState">Select Reason</label>
                                    <select id="inputState" class="form-control">
                                      <option selected>Select Reason</option>
                                      <option>Duplicate</option>
                                      <option>Fraudlent</option>
                                      <option>Requested By Customer</option>
                                    </select>
                                  </div>
                                </div>
                              </form>

                              <div class="row text-center">
                                <div class="amount">Amount: $10000.00</div>&nbsp;
                                <div class="fee pl-3">Fee: 0$</div>&nbsp;
                                <div class="total pl-3">Total: $54644</div>
                            </div>

                            <div class="alert alert-success shadow-sm mt-3" role="alert">
                                <h4 class="alert-heading">Important Note</h4>
                                <p>Please allow 2-5 business days for the refund to reflect on
                                    your customer's card statement.</p>
                                <p class="mb-0"></p>
                              </div>

                           </div>
                           <div class="modal-footer justify-content-center">
                               <button type="button" class="btn btn-secondary btn_refund_cancel"
                                   data-dismiss="modal">Cancel</button>
                               <button type="button" class="btn btn-primary btn_refund_final">Refund</button>
                           </div>
                       </div>
                   </div>
               </div>
               <!-- Refund Modal End-->

            </div>
