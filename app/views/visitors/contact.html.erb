<!-- Contact Section -->
  <section class="contact-us">
    <div class="container">
        <div class="row text-center">
            <div class="sub-title">Contact Us</div>
            <div class="title">Need Help? Let Us Now</div>
            <p>Cloudless and of a deep dark blue spectacle before us was.</p>
        </div>
    </div>
    <div class="contact-bg">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <%= image_tag "contact-image.svg", class: "img-fluid"%>

                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="contact-wrapper">
                        <div class="title">Get In Touch</div>
                        <form class="row g-3">
                            <div class="col-md-12">
                              <input type="email" placeholder="Your Email" class="form-control" id="inputEmail4">
                            </div>
                            <div class="col-md-12">
                              <input type="password" placeholder="Full Name" class="form-control" id="inputPassword4">
                            </div>
                            <div class="col-md-12">
                                <textarea class="form-control" placeholder="Your Message" id="exampleFormControlTextarea1" rows="3"></textarea>
                            </div>
                            <div class="col-12">
                              <button type="submit" class="btn btn-contact-us">Submit</button>
                            </div>
                          </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </section>
  <!-- /.Contact Section -->
